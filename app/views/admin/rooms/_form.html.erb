<%= form_for [:admin, room] do |form| %>
  <div class="Polaris-Page__Content">

    <%= render partial: "form_errors", locals: {room: room} %>

    <div class="Polaris-Card">
      <div class="Polaris-Card__Header">
        <h2 class="Polaris-Heading">Room Details</h2>
      </div>
      <div class="Polaris-Card__Section">
        <div class="Polaris-FormLayout">
          <div class="Polaris-FormLayout__Item">
            <label class="Polaris-Choice" for="Checkbox7">
              <span class="Polaris-Choice__Control">
                <div class="Polaris-Checkbox">
                  <%= form.check_box :vip, id: "Checkbox7", class: "Polaris-Checkbox__Input", value: "true"%>

                  <div class="Polaris-Checkbox__Backdrop">
                  </div>
                  <div class="Polaris-Checkbox__Icon"><span class="Polaris-Icon"><svg class="Polaris-Icon__Svg" viewBox="0 0 20 20"><g fill-rule="evenodd"><path d="M8.315 13.859l-3.182-3.417a.506.506 0 0 1 0-.684l.643-.683a.437.437 0 0 1 .642 0l2.22 2.393 4.942-5.327a.437.437 0 0 1 .643 0l.643.684a.504.504 0 0 1 0 .683l-5.91 6.35a.437.437 0 0 1-.642 0"></path><path d="M8.315 13.859l-3.182-3.417a.506.506 0 0 1 0-.684l.643-.683a.437.437 0 0 1 .642 0l2.22 2.393 4.942-5.327a.437.437 0 0 1 .643 0l.643.684a.504.504 0 0 1 0 .683l-5.91 6.35a.437.437 0 0 1-.642 0"></path></g></svg></span></div></div></span><span class="Polaris-Choice__Label">VIP</span></label>
          </div>

          <div class="Polaris-FormLayout__Item">
            <div class="">
              <div class="Polaris-Labelled__LabelWrapper">
                <div class="Polaris-Label"><label id="TextField8Label" for="TextField8" class="Polaris-Label__Text">Room Number
                  </label></div>
              </div>
              <div class="Polaris-TextField">
                <%= form.number_field :number, step: 1, id: "TextField8", class:"Polaris-TextField__Input", placeholder: "201"%>
                <div class="Polaris-TextField__Backdrop"></div>
              </div>
            </div>
          </div>

          <div class="Polaris-FormLayout__Item">
            <div class="">
              <div class="Polaris-Labelled__LabelWrapper">
                <div class="Polaris-Label"><label id="TextField8Label" for="TextField8" class="Polaris-Label__Text">Floor Number
                  </label></div>
              </div>
                <%= form.select :floor, [[1, 1], [2, 2], [3, 3], [4, 4]]%>
            </div>
          </div>


          <div class="Polaris-FormLayout__Item">
            <div class="">
              <div class="Polaris-Labelled__LabelWrapper">
                <div class="Polaris-Label"><label id="TextField8Label" for="TextField8" class="Polaris-Label__Text">Wing
                  </label></div>
              </div>
                <%= form.select :wing, [['North', 'north'], ['South', 'south'],['East', 'east'],['West', 'west']],
              class: 'Polaris-Select__Input'%>
            </div>
          </div>

        </div>

      </div>

    </div>
  </div>


  <div class="Polaris-PageActions">
    <div class="Polaris-Stack Polaris-Stack--spacingTight Polaris-Stack--distributionEqualSpacing">
      <div class="Polaris-Stack__Item">
        <div class="Polaris-ButtonGroup">
          <div class="Polaris-ButtonGroup__Item">
            <button type="button" class="Polaris-Button"><span class="Polaris-Button__Content"><span>Delete</span></span></button>
          </div>
        </div>
      </div>
      <div class="Polaris-Stack__Item">
        <%= form.submit class: "Polaris-Button Polaris-Button--primary Polaris-Button__Content"%>
      </div>
    <% end %>
    </div>
  </div>
  </div>
