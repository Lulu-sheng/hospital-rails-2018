<div id="profile-wrapper">
  <div class="Polaris-Card">
    <div class="Polaris-Card__Header">
      <h2 class="Polaris-Heading">Your Profile</h2>
    </div>
    <div class="Polaris-Card__Section">
      <div class="Polaris-Scrollable Polaris-Scrollable--vertical" data-polaris-scrollable="true" style="height: 100px;">
        <dl class="Polaris-DescriptionList">
          <% [user.employee_record.attributes, user.attributes].each do |collection|%>
            <% collection.each_pair do |key, value|%>
              <% unless key == 'created_at' || key == 'updated_at' || key == 'id' || key == 'password_digest'%>
                  <dt class="Polaris-DescriptionList__Term flex1"><%=key.gsub'_', ' '%></dt>
                  <dd class="Polaris-DescriptionList__Description flex2"><%=value%></dd>
              <%end%>
            <%end%>
          <%end%>
        </dl>
      </div>
    </div>
  </div>
</div>
