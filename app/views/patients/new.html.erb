<div class="Polaris-Page Polaris-Page--singleColumn">
  <div class="Polaris-Page__Header Polaris-Page__Header--hasBreadcrumbs">
    <div class="Polaris-Page__Navigation">
      <nav role="navigation"><a class="Polaris-Breadcrumbs__Breadcrumb" data-polaris-unstyled="true" href=<%=url_for(action: 'index')%>><span class="Polaris-Breadcrumbs__Icon"><span class="Polaris-Icon"><svg class="Polaris-Icon__Svg" viewBox="0 0 20 20"><path d="M12 16a.997.997 0 0 1-.707-.293l-5-5a.999.999 0 0 1 0-1.414l5-5a.999.999 0 1 1 1.414 1.414L8.414 10l4.293 4.293A.999.999 0 0 1 12 16" fill-rule="evenodd"></path></svg></span></span><span class="Polaris-Breadcrumbs__Content">Previous Patients</span></a></nav>
    </div>
    <div class="Polaris-Page__MainContent">
      <div class="Polaris-Page__TitleAndActions">
        <div class="Polaris-Page__Title">
          <h1 class="Polaris-DisplayText Polaris-DisplayText--sizeLarge">Add New Patient</h1>
        </div>
        <div class="Polaris-Page__Actions">
          <div class="Polaris-Page__PrimaryAction"><button type="button" class="Polaris-Button Polaris-Button--primary Polaris-Button--disabled" disabled=""><span class="Polaris-Button__Content"><span>Save</span></span></button>
          </div>
        </div>
      </div>
      <div class="Polaris-Page__PrimaryAction"><button type="button" class="Polaris-Button Polaris-Button--primary Polaris-Button--disabled" disabled=""><span class="Polaris-Button__Content"><span>Save</span></span></button>
      </div>
    </div>
  </div>

  <%= form_for(@patient, url: @url) do |form| %>
    <div class="Polaris-Page__Content">
      <% if @patient.errors.any? %>
    <div class="Polaris-Banner Polaris-Banner--statusCritical" tabindex="0" role="alert" aria-live="polite" aria-labelledby="Banner3Heading" aria-describedby="Banner3Content">
  <div class="Polaris-Banner__Ribbon"><span class="Polaris-Icon Polaris-Icon--colorRedDark Polaris-Icon--hasBackdrop"><svg class="Polaris-Icon__Svg" viewBox="0 0 20 20"><g fill-rule="evenodd"><circle fill="currentColor" cx="10" cy="10" r="9"></circle><path d="M2 10c0-1.846.635-3.543 1.688-4.897l11.209 11.209A7.954 7.954 0 0 1 10 18c-4.411 0-8-3.589-8-8m14.312 4.897L5.103 3.688A7.954 7.954 0 0 1 10 2c4.411 0 8 3.589 8 8a7.952 7.952 0 0 1-1.688 4.897M0 10c0 5.514 4.486 10 10 10s10-4.486 10-10S15.514 0 10 0 0 4.486 0 10"></path></g></svg></span></div>
  <div>
    <div class="Polaris-Banner__Heading" id="Banner3Heading">
      <p class="Polaris-Heading"><%= pluralize(@patient.errors.count, "error") %> prohibited this nurse from being saved:</p>
    </div>
    <div class="Polaris-Banner__Content" id="Banner3Content">
     <ul>
      <% @patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul> 
    </div>
  </div>
</div>
  <% end %>
      <div class="Polaris-Card">
        <div class="Polaris-Card__Header">
          <h2 class="Polaris-Heading">Nurse Details</h2>
        </div>
        <div class="Polaris-Card__Section">

          <!-- form!!-->
          <div class="Polaris-FormLayout">

            <div class="Polaris-FormLayout__Item">
              <div class="">
                <div class="Polaris-Labelled__LabelWrapper">
                  <div class="Polaris-Label"><label id="TextField7Label" for="TextField7" class="Polaris-Label__Text">Full Name</label></div>
                </div>
                <div class="Polaris-TextField">
                  <!--<input id="TextField7" class="Polaris-TextField__Input" aria-labelledby="TextField7Label" aria-invalid="false" value placeholder="Jane Doe">-->
                  <%= form.text_field :name, class:"Polaris-TextField__Input", placeholder: "Jane Doe"%>
                  <div class="Polaris-TextField__Backdrop"></div>
                </div>
              </div>
            </div>

            <div class="Polaris-FormLayout__Item">
              <div class="">
                <div class="Polaris-Labelled__LabelWrapper">
                  <div class="Polaris-Label"><label id="TextField8Label" for="TextField8" class="Polaris-Label__Text">Emergency Contact
                    </label></div>
                </div>
                <div class="Polaris-TextField">
                  <!--<input id="TextField8" class="Polaris-TextField__Input" type="email" aria-labelledby="TextField8Label" aria-invalid="false" value placeholder="jane.doe@gmail.com">-->
                  <%= form.text_field :emergency_contact, class:"Polaris-TextField__Input", placeholder: "Momma Doe"%>
                  <div class="Polaris-TextField__Backdrop"></div>
                </div>
              </div>
            </div>

            <div class="Polaris-FormLayout__Item">
              <div class="">
                <div class="Polaris-Labelled__LabelWrapper">
                  <div class="Polaris-Label"><label id="TextField8Label" for="TextField8" class="Polaris-Label__Text">Blood Type
                    </label></div>
                </div>
                <div class="Polaris-TextField">
                  <!--<input id="TextField8" class="Polaris-TextField__Input" type="email" aria-labelledby="TextField8Label" aria-invalid="false" value placeholder="jane.doe@gmail.com">-->
                  <%= form.text_field :blood_type, class:"Polaris-TextField__Input", placeholder: "A"%>
                  <div class="Polaris-TextField__Backdrop"></div>
                </div>
              </div>
            </div>

            <div class="Polaris-FormLayout__Item">
              <div class="">
                <div class="Polaris-Labelled__LabelWrapper">
                  <div class="Polaris-Label"><label id="TextField7Label" for="TextField7" class="Polaris-Label__Text">Doctor</label></div>
                </div>
                <%= form.collection_select(:doctor_id, Doctor.all, :id, :name) %>
              </div>
            </div>

            <div class="Polaris-FormLayout__Item">
              <div class="">
                <div class="Polaris-Labelled__LabelWrapper">
                  <div class="Polaris-Label"><label id="TextField7Label" for="TextField7" class="Polaris-Label__Text">Room</label></div>
                </div>
                <%= form.collection_select(:room_id, Room.all, :id, :number)%>
              </div>
            </div>

            <div class="Polaris-FormLayout__Item">
              <div class="">
                <div class="Polaris-Labelled__LabelWrapper">
                  <div class="Polaris-Label"><label id="TextField7Label" for="TextField7" class="Polaris-Label__Text">Admitted On Date</label></div>
                </div>
                <%= form.date_select :admitted_on%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="Polaris-PageActions">
      <div class="Polaris-Stack Polaris-Stack--spacingTight Polaris-Stack--distributionEqualSpacing">
        <div class="Polaris-Stack__Item">
          <div class="Polaris-ButtonGroup">
            <div class="Polaris-ButtonGroup__Item">
              <button type="button" class="Polaris-Button"><span class="Polaris-Button__Content"><span>Delete</span></span></button>
            </div>
          </div>
        </div>
        <div class="Polaris-Stack__Item">
          <%= form.submit class: "Polaris-Button Polaris-Button--primary Polaris-Button__Content"%>
        </div>
      <% end %>
      </div>
    </div> 
</div>
